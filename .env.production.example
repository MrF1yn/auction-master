# Production environment variables for docker-compose.prod.yml
# Copy this to .env.production and fill in your values

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@your-postgres-host:5432/auction_db?schema=public

# Redis connection string
REDIS_URL=redis://your-redis-host:6379

# JWT secret (minimum 32 characters, use a strong random string)
JWT_SECRET_KEY=your-production-secret-key-minimum-32-characters

# JWT expiration in hours
JWT_EXPIRATION_TIME_IN_HOURS=24

# Server port
PORT=3010

# CORS origin (your frontend URL)
CORS_ORIGIN=https://your-frontend-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_IN_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100
